<script data-cvs-id="167">
  document.querySelector('#open-button').addEventListener('click', () => document.querySelector('sdf-focus-pane').visible = true);
  document.querySelector('sdf-focus-pane').addEventListener('sdfDismiss', (evt) => evt.currentTarget.visible = false);
  document.querySelector('sdf-focus-pane').addEventListener('sdfAccept', (evt) => evt.currentTarget.visible = false);

</script>
